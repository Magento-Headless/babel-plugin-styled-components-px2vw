{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "removeComments": true,
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node", "jest"]
  },
  "include": ["src", "types"],
  "exclude": ["src/**/__tests__", "lib", "example", "node_modules"]
}
